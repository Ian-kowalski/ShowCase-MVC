@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48px" height="48px">
                    <circle cx="28" cy="28" r="18.5" class="secondary-path--fill" />
                    <path class="primary-path--stroke" d="M31.4,41c-2.3,1-4.8,1.5-7.4,1.5C13.8,42.5,5.5,34.2,5.5,24c0-4.5,1.6-8.6,4.2-11.8" />
                    <path class="primary-path--stroke" stroke-miterlimit="10" stroke-width="3" d="M16.3,7.2c2.3-1.1,5-1.7,7.7-1.7c10.2,0,18.5,8.3,18.5,18.5c0,4-1.3,7.7-3.4,10.7" />
                    <circle cx="24" cy="16" r="2" class="primary-path--fill" />
                    <line x1="24" x2="24" y1="22.5" y2="33.5" class="primary-path--stroke" />
                </svg>
            <span class="link-text">@User.Identity?.Name</span>
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48px" height="48px">
                        <circle cx="28" cy="28" r="18.5" class="secondary-path--fill" />
                        <path class="primary-path--stroke" d="M31.4,41c-2.3,1-4.8,1.5-7.4,1.5C13.8,42.5,5.5,34.2,5.5,24c0-4.5,1.6-8.6,4.2-11.8" />
                        <path class="primary-path--stroke" stroke-miterlimit="10" stroke-width="3" d="M16.3,7.2c2.3-1.1,5-1.7,7.7-1.7c10.2,0,18.5,8.3,18.5,18.5c0,4-1.3,7.7-3.4,10.7" />
                    </svg>
                    <span class="link-text">Logout</span>
                </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48px" height="48px">
                    <circle cx="28" cy="28" r="18.5" class="secondary-path--fill" />
                    <path class="primary-path--stroke" d="M35.4,38.8c-3.2,2.4-7.1,3.9-11.4,3.9C13.7,42.7,5.3,34.3,5.3,24c0-2.6,0.6-5.2,1.5-7.4" />
                    <path class ="primary-path--stroke" d="M12.1,9.6C15.3,7,19.5,5.3,24,5.3c10.3,0,18.7,8.4,18.7,18.7c0,2.3-0.4,4.5-1.2,6.6" />
                    <line x1="24" x2="24" y1="14" y2="34" class="primary-path--stroke" />
                    <line x1="34" x2="14" y1="24" y2="24" class="primary-path--stroke" />
                </svg>
            <span class="link-text">Register</span> 
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48px" height="48px">
                    <circle cx="28" cy="28" r="18.1" class="secondary-path--fill" />
                    <path class="primary-path--stroke" d="M34.3,39.4c-2.9,2-6.5,3.1-10.3,3.1C13.8,42.5,5.5,34.2,5.5,24c0-4.4,1.6-8.5,4.1-11.7" />
                    <path class="primary-path--stroke" d="M20.1,5.9c1.3-0.3,2.6-0.4,3.9-0.4c10.2,0,18.5,8.3,18.5,18.5c0,2.9-0.7,5.6-1.8,8" />
                    <polyline class="primary-path--stroke" points="16.5,24.5 21.5,29.5 31.5,19.5" />
                </svg>
            <span class="link-text">Login</span>
        </a>
    </li>
}
</ul>


